<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharang.wheresmymoney">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".SignUp" />

        <activity android:name=".SignIn" />

        <activity
            android:name=".Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".IncomeCategoryActivity"
            android:label="Select a category"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />

        <activity
            android:name=".IncomeDialogActivity"
            android:label="Enter Details"
            android:noHistory="true" />

        <activity
            android:name=".ExpenditureCategoryActivity"
            android:label="Select a category"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog"/>

        <activity
            android:name=".ExpenditureDialogActivity"
            android:label="Enter Details"
            android:noHistory="true"/>

    </application>

</manifest>